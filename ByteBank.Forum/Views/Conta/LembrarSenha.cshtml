@model ByteBank.Forum.ViewModels.ContaEsqueciSenhaViewModel
@{
    ViewBag.Title = "LembrarSenha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Esqueci minha senha</h2>

@using (Html.BeginForm())
{
    <h4>Preencha o campo de email com seu endereço de email cadastrado no Fórum e enviarmos a ele as instruções para você recuperar sua senha.</h4>
    <hr />

    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.EditorForModel()

    <div class="clearfix"><br /></div>
    <div class="form-group">
        <div class="col-md-2" style="padding-left: 0px;">
            <input type="submit" value="Enviar" class="btn btn-success" />
        </div>
    </div>
    <div class="clearfix"></div>
}

