@model ByteBank.Forum.ViewModels.TopicoCriarViewModel
@{
    ViewBag.Title = "Criar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Criar</h2>

@using (Html.BeginForm())
{
    <h4> Crie um novo tópico para o seu fórum! </h4>
    <hr />

    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.EditorForModel()

    <div class="clearfix"><br /></div>
    <div class="form-group">
        <div class="col-md-2" style="padding-left: 0px;">
            <input type="submit" value="Criar Tópico" class="btn btn-success" />
        </div>
    </div>
    <div class="clearfix"></div>
}